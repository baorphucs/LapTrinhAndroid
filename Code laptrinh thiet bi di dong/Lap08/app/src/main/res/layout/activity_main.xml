<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#4CAF50"
        android:gravity="center"
        android:text="@string/title"
        android:textColor="#FFC107"
        android:textSize="34sp"
        android:textStyle="bold"
        />
    <TextView
        android:id="@+id/lblID"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/idSv"
        android:textSize="20dp"
        />
    <EditText
        android:id="@+id/edID"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:enabled="false"
        android:ems="10"
        android:hint="ID"
        android:inputType="text"
        android:paddingStart="20dp"
        android:textSize="20sp"
        android:textStyle="bold"
        />
    <TextView
        android:id="@+id/lblMaSv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/MaSv"
        android:textSize="20dp"
        />
    <EditText
        android:id="@+id/edMaSv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />
    <TextView
        android:id="@+id/lblHoVaTen"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/HoVaTen"
        android:textSize="20dp"
        />
    <EditText
        android:id="@+id/edHoVaTen"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />
    <LinearLayout
        android:id="@+id/button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:id="@+id/btnThem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/Them"
            />
        <Button
            android:id="@+id/btnXoa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="@string/Xoa"
            />
        <Button
            android:id="@+id/btnCapNhat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:text="@string/CapNhat"
            />
        <Button
            android:id="@+id/btnTimKiem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:text="@string/TimKiem"
            />
    </LinearLayout>
        <TextView
            android:id="@+id/data"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#4CAF50"
            android:text="@string/data"
            android:textColor="#FFC107"
            />
        <ListView
            android:id="@+id/lvDanhSachSinhVien"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />
</LinearLayout>